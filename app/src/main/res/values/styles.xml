<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="MediaCard" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/block_size</item>
        <item name="android:layout_height">@dimen/block_size</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
    </style>

    <style name="MusicCard" parent="MediaCard">
        <item name="cardBackgroundColor">@color/card_music</item>
    </style>

    <style name="TextCard" parent="MediaCard">
        <item name="cardBackgroundColor">@color/card_text</item>
    </style>

    <style name="TextPageCard" parent="TextCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">@dimen/margin_default</item>
    </style>

    <style name="TextBubbleCard" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/card_block_main_text_w</item>
        <item name="android:layout_height">@dimen/card_block_main_text_h</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TextBubbleText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/margin_big</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_default</item>
        <item name="android:textFontWeight">250</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_main_in_card</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:lineSpacingMultiplier">.7</item>
    </style>

    <style name="CardNameText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/cover_size_big</item>
        <item name="android:layout_height">@dimen/text_block_h</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="CardDescriptionText" parent="CardNameText">
        <item name="android:textColor">@color/description_text</item>
        <item name="android:textSize">@dimen/text_size_description</item>
    </style>

    <style name="CardCover" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/cover_size_big</item>
        <item name="android:layout_height">@dimen/cover_size_big</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
    </style>

    <style name="CardButtons" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/button_size_w</item>
        <item name="android:layout_height">@dimen/button_size_h</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SecondaryCardNameText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_default</item>
        <item name="android:layout_marginVertical">@dimen/margin_big</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="MainScreen" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="BottomBar" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="BottomBarItem" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@string/bottom_bar_btn</item>
    </style>

</resources>