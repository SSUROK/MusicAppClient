<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.elements.RecyclerSongElementFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_page_navigation_background"
        app:cardCornerRadius="@dimen/radius_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/cover_size_big"
                android:layout_height="@dimen/cover_size_big"
                android:layout_margin="@dimen/margin_default"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/artistPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kglw2" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/albumName"
                android:layout_marginHorizontal="@dimen/margin_big"
                android:layout_marginVertical="@dimen/margin_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center|start"
                android:textStyle="italic|bold"
                android:textSize="@dimen/text_size_big"
                android:text="@string/fish" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>